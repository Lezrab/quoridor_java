<project>
    <target name="clean">
	<delete dir="../javaDoc" />
	<delete dir="../class/quoridor" />
	<delete	file="../class/GameLauncher.class" />
	<delete	file="../class/MANIFEST.MF" />
	<delete	file="Quoridor.jar" />
    </target>
    <target name="compile">
        <javac includeantruntime="false" srcdir="../src" destdir="../class"/>
    </target>
    <target name="manifest" depends="compile">
        <manifest file="../class/MANIFEST.MF">
                <attribute name="Main-Class" value="GameLauncher"/>
        </manifest>
    </target>
    <target name="jar" depends="manifest">
        <jar destfile="Quoridor.jar" basedir="../class" manifest="../class/MANIFEST.MF"/>
    </target>
    <target name="jdoc1">
        <javadoc sourcefiles="../src/model/*" destdir="../javaDoc"/>
    </target>
    <target name="jdoc2">
        <javadoc sourcefiles="../src/view/*" destdir="../javaDoc"/>
    </target>
    <target name="jdoc3">
        <javadoc sourcefiles="../src/controller/*" destdir="../javaDoc"/>
    </target>
    <target name="all" depends="clean, compile, manifest, jar, jdoc1, jdoc2, jdoc3">
    </target>
</project>